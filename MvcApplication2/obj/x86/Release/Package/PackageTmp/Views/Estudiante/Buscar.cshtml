                        @Html.TextBoxFor(model => model.codigo, new { @class = "form-control", @placeholder = "Codigo" })
                        @Html.ValidationMessageFor(model => model.codigo)

                        <span class="help-block">El criterio de búsqueda para los estudiantes es solo a través del código </span>
                    </div>
                    <input type="submit" class="btn btn-lg btn-primary btn-block" value="Buscar" />



